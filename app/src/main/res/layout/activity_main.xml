<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.sugarest.jane.viaplaysections.MainActivity">

    <include layout="@layout/app_bar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawer_recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linear_layout_activity_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin">

        <TextView
            android:id="@+id/section_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_title_label"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            tools:text="@string/section_title" />

        <TextView
            android:id="@+id/section_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_description_label"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/section_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            tools:text="@string/section_description" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
