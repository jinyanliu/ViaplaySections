<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearlayout_detail_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/section_title_label_text_view"
                style="@style/main_activity_section_label_text_view_style" />

            <TextView
                android:id="@+id/section_title_content_text_view"
                style="@style/main_activity_section_description_text_view_style" />

            <TextView
                android:id="@+id/section_description_label_text_view"
                style="@style/main_activity_section_label_text_view_style" />

            <TextView
                android:id="@+id/section_description_content_text_view"
                style="@style/main_activity_section_description_text_view_style" />
        </LinearLayout>

        <TextView
            android:id="@+id/empty_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_message_empty_view"
            android:textSize="20sp"
            android:visibility="invisible" />
    </FrameLayout>
</layout>